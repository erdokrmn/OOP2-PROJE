<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Oop2Ödev.BiletDeğişikliği">
    <ContentPage.Content>
        <StackLayout>
            <Label Text=" PNR Sorgula"
                   BackgroundColor="Orange"
                   TextColor="White"
                   HeightRequest="50"
                   HorizontalTextAlignment="Start"
                   FontAttributes="Bold"/>

            <Entry x:Name="entPnrNo"
                    Text="PNR No"
                    Margin="5"/>
            <Entry x:Name="entCepNo"
                    Text="Cep Tel No"
                    Margin="5"/>
            <Label  Text="-------- veya --------"
                    Margin="5"/>
            <Entry x:Name="entSoyad"
                    Text="Soyadınız"
                    Margin="5"/>
            <Button x:Name="btnSorgula"
                    BackgroundColor="Orange"
                    TextColor="White"
                    Text="SORGULA"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    WidthRequest="120"
                    Margin="50"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>